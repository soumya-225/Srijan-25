<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30sp"
    android:layout_marginBottom="20sp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:gravity="end">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end">

            <TextView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/event_onLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/app_name"/>

            <TextView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/venue_onLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/app_name" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/time_onLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_schedule"
            android:padding="8dp"
            android:text="6:00PM"
            android:textColor="@color/textColor"
            android:layout_gravity="center | end" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:drawableLeftCompat="@drawable/schedule_circles" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/event_onRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="16sp"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/venue_onRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="16sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/time_onRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_schedule"
            android:padding="8dp"
            android:text="6:00PM"
            android:textColor="@color/textColor"
            android:layout_gravity="center | start"/>

    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>