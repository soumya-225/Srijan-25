                <!--                    android:lines="1"-->
                <!--                    android:scrollHorizontally="true"-->
                <!--                    android:singleLine="true"-->
                <!--                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />-->
                <!--            </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ltEtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPassword"
                        style="@style/h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Password"
                        android:textColor="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ltEtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvConfirmPassword"
                        style="@style/h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:textColor="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ltEtReferralCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvReferralCode"
                        style="@style/h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Referral Code (Optional)"
                        android:textColor="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etReferralCode"
                        
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:inputType="number"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvIITISM"
                    style="@style/h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Are you an IIT ISM student?"
                    android:textColor="@color/white"/>

                <RadioGroup
                    android:id="@+id/rgIITISM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@id/rbYes"
                    android:weightSum="2" >

                    <RadioButton
                        android:id="@+id/rbYes"
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/rbNo"
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No" />
                </RadioGroup>

                <Button
                    android:id="@+id/btnSignUp"
                    style="@style/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="SIGN UP" />

                <TextView
                    android:id="@+id/tvAlreadyAccount"
                    style="@style/h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Already have an account?"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvLogin"
                    style="@style/h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="LOGIN"
                    android:textAlignment="center"
                    android:textColor="@color/primaryDark"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

