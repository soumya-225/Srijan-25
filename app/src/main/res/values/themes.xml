<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Concetto24" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/text</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/bgAlternate</item>
    </style>
    <style name="btnRegular">
        <item name="cornerRadius">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/btnRegular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/futura_heavy</item>
    </style>

    <style name="btn">
        <item name="backgroundTint">@color/btnRegular</item>
        <item name="android:fontFamily">@font/futura_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ShapeAppearance.MyApp.MediumComponent.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
    <style name="Theme.Concetto24" parent="Base.Theme.Concetto24" />

    <style name="ProgressBarTheme">
        <item name="colorSecondary">@color/primary</item>

    </style>

    <style name="h0">
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/futura</item>
    </style>

    <style name="h1">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/futura</item>
    </style>

    <style name="h2">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h3">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h4">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h5">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h6">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>
        <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
            <item name="tabIndicatorHeight">0dp</item> <!-- Remove tab indicator height -->
            <item name="tabIndicatorColor">@android:color/transparent</item> <!-- Set indicator color to transparent -->
            <item name="tabBackground">@android:color/transparent</item> <!-- Ensure no background for tabs -->
        </style>

    <style name="button1">
        <item name="cornerSize">20%</item>
    </style>

    <style name="button2">
        <item name="cornerSize">50%</item>
    </style>
</resources>
