<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent fill -->
            <stroke android:width="2dp" android:color="#FBBF24" /> <!-- Gold border -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Gradient Background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#8B4513"
            android:endColor="#654321" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
